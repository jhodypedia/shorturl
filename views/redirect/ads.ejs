<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Menuju Link - <%= siteName %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/public/css/style.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
</head>
<body>
  <div class="redirect-wrap">
    <div class="redirect-card">
      <div class="redirect-icon"><i class="fa-solid fa-arrow-right"></i></div>
      <h3>Sedang memproses</h3>
      <p class="text-muted small mb-3">Harap tunggu sebentar...</p>

      <div class="progress"><div id="progressBar" class="progress-bar"></div></div>

      <button id="continueBtn" class="btn btn-primary redirect-btn" disabled>
        Lanjutkan <i class="fa fa-arrow-right ms-2"></i>
      </button>
    </div>
  </div>

  <% if (adScript && adScript.trim() !== '') { %>
    <%- adScript %>
  <% } else if (adUrl && adUrl.trim() !== '') { %>
    <script>console.log("Ad URL loaded");</script>
  <% } %>

  <% if (antiAdblock === 'on') { %>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      let bait = document.createElement("div");
      bait.innerHTML = "&nbsp;"; bait.className = "adsbox"; document.body.appendChild(bait);
      setTimeout(() => { if (bait.offsetHeight === 0) { window.location.href = "/adblock-warning"; } bait.remove(); }, 500);
    });
  </script>
  <% } %>

  <script>
    const continueBtn = document.getElementById("continueBtn");
    const progressBar = document.getElementById("progressBar");
    let duration = 5; let elapsed = 0;
    const interval = setInterval(() => {
      elapsed++; progressBar.style.width = (elapsed/duration*100) + "%";
      if (elapsed >= duration) { clearInterval(interval); continueBtn.disabled = false; progressBar.style.width = "100%"; }
    }, 1000);

    continueBtn.addEventListener("click", () => {
      if ("<%= adUrl %>" && "<%= adUrl %>".trim() !== "") { window.open("<%= adUrl %>", "_blank"); }
      window.location.href = "<%= target %>";
    });
  </script>
</body>
</html>
