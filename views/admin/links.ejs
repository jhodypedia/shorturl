<h3 class="mb-3">Daftar Semua Link</h3>
<div class="card p-3">
  <div class="table-responsive">
    <table class="table table-striped datatable">
      <thead class="table-dark"><tr><th>ID</th><th>Kode</th><th>Judul</th><th>Target</th><th>User</th><th>Status</th><th>Stat</th></tr></thead>
      <tbody>
        <% links.forEach(l => { %>
          <tr>
            <td><%= l.id %></td>
            <td><%= l.code %></td>
            <td><%= l.title || '-' %></td>
            <td style="max-width:320px;word-break:break-all;"><%= l.target %></td>
            <td><%= l.user?.name || 'Unknown' %> (<%= l.user?.email %>)</td>
            <td><span class="badge bg-<%= l.enabled?'success':'danger' %>"><%= l.enabled?'Aktif':'Nonaktif' %></span></td>
            <td><a href="/admin/links/<%= l.id %>/stats" class="btn btn-sm btn-outline-info"><i class="fa fa-chart-line"></i></a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
