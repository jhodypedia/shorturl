<!doctype html>
<html lang="id" data-theme="dark">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title><%= title || "ShortURL" %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet"/>
  <link href="/css/style.css" rel="stylesheet"/>
</head>
<body class="app-shell">

<div class="d-flex">
  <% if (user) { %>
  <aside id="sidebar" class="app-sidebar">
    <div class="brand">ShortURL</div>
    <ul class="nav flex-column">
      <% if (user.role==='admin') { %>
        <li><a href="/admin" class="nav-link">Dashboard</a></li>
        <li><a href="/admin/urls" class="nav-link">URLs</a></li>
        <li><a href="/admin/users" class="nav-link">Users</a></li>
        <li><a href="/admin/settings" class="nav-link">Settings</a></li>
        <li><a href="/admin/smtp" class="nav-link">SMTP</a></li>
      <% } else { %>
        <li><a href="/user/dashboard" class="nav-link">Dashboard</a></li>
        <li><a href="/user/urls" class="nav-link">My URLs</a></li>
        <li><a href="/user/profile" class="nav-link">Profile</a></li>
      <% } %>
    </ul>
  </aside>
  <% } %>

  <div class="flex-grow-1">
    <nav class="navbar navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">ShortURL</a>
        <div>
          <% if (user) { %>
            <span class="me-2"><i class="fa-solid fa-user"></i> <%= user.name %></span>
            <a href="/auth/logout" class="btn btn-sm btn-danger">Logout</a>
          <% } else { %>
            <a href="/auth/login" class="btn btn-sm btn-light">Login</a>
            <a href="/auth/register" class="btn btn-sm btn-outline-light ms-2">Register</a>
          <% } %>
        </div>
      </div>
    </nav>

    <main class="p-4">
      <%- body %>
    </main>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<script>
  <% if (success && success.length) { success.forEach(s=>{ %> toastr.success("<%- s %>"); <% }) } %>
  <% if (error && error.length) { error.forEach(e=>{ %> toastr.error("<%- e %>"); <% }) } %>
</script>
<script src="/js/main.js"></script>
</body>
</html>
