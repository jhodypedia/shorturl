<h3>SMTP Settings</h3>
<form method="post" action="/admin/smtp" class="card p-3 mb-4">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <input class="form-control mb-2" name="smtp_host" value="<%= values.smtp_host %>" placeholder="Host">
  <input class="form-control mb-2" name="smtp_port" value="<%= values.smtp_port %>" placeholder="Port">
  <input class="form-control mb-2" name="smtp_user" value="<%= values.smtp_user %>" placeholder="User">
  <input class="form-control mb-2" name="smtp_pass" value="<%= values.smtp_pass %>" placeholder="Password">
  <input class="form-control mb-2" name="smtp_from" value="<%= values.smtp_from %>" placeholder="From Email">
  <button class="btn btn-primary">Simpan</button>
</form>

<h5>Test Send Email</h5>
<form method="post" action="/admin/smtp/test" class="card p-3">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <input type="email" name="to" class="form-control mb-2" placeholder="Email tujuan" required>
  <button class="btn btn-success">Kirim Test</button>
</form>
