<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <style>
    body { font-family: Arial, sans-serif; background:#f6f7fb; padding:20px; }
    .card { background:#fff; border-radius:8px; padding:20px; max-width:520px; margin:0 auto; box-shadow:0 2px 8px rgba(0,0,0,.1); }
    .btn { display:inline-block; padding:10px 16px; margin-top:20px; background:#3f63ff; color:#fff; text-decoration:none; border-radius:4px; font-weight:600; }
    .footer { margin-top:20px; font-size:12px; color:#888; }
  </style>
</head>
<body>
  <div class="card">
    <h2><%= subject %></h2>
    <p><%= message %></p>
    <% if (buttonUrl) { %>
      <a href="<%= buttonUrl %>" class="btn"><%= buttonText || "Open Link" %></a>
    <% } %>
    <div class="footer">Â© <%= new Date().getFullYear() %> ShortURL</div>
  </div>
</body>
</html>
