<h3>My URLs</h3>
<form method="post" action="/user/urls" class="mb-3">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="input-group">
    <input name="url" class="form-control" placeholder="https://example.com" required>
    <button class="btn btn-primary">Shorten</button>
  </div>
</form>

<table class="table table-sm">
  <thead><tr><th>Short</th><th>Original</th><th>Clicks</th><th>Aksi</th></tr></thead>
  <tbody>
    <% list.forEach(u=>{ %>
    <tr>
      <td><a href="/r/<%= u.shortCode %>" target="_blank"><%= u.shortCode %></a></td>
      <td class="text-truncate" style="max-width:520px"><%= u.originalUrl %></td>
      <td><%= u.clicks %></td>
      <td>
        <form method="post" action="/user/urls/<%= u.id %>/delete" onsubmit="return confirm('Hapus URL ini?')">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button class="btn btn-sm btn-danger">Hapus</button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
